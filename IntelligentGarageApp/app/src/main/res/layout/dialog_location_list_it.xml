<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/underline"
        android:gravity="center">

        <TextView
            android:id="@+id/dlli_tv_location_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Host name" />

        <Button
            android:id="@+id/dlli_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/button_drawable4"
            android:text="取消" />

        <Button
            android:id="@+id/dlli_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/button_drawable4"
            android:text="保存" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/underline"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="位置名"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/dlli_et_location_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical|end"
                android:text="Host Name"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
                app:layout_constraintLeft_toRightOf="@id/tv_1" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="IP"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_1" />

            <EditText
                android:id="@+id/dlli_et_location_ip"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical|end"
                android:text="192.168.43.131"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_2"
                app:layout_constraintLeft_toRightOf="@id/tv_2" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Port"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_2" />

            <EditText
                android:id="@+id/dlli_et_location_port"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical|end"
                android:text="8080"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_3"
                app:layout_constraintLeft_toRightOf="@id/tv_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>